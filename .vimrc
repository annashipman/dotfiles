set nocompatible
syntax on

set number
set list "show invisible character
set showcmd
set expandtab "use spaces instead of tabs
set tabstop=2 softtabstop=2 shiftwidth=2 "default tab sizes
set ruler "show row and column at the bottom of the window
set tw=80
set colorcolumn=+1
"set hlsearch "highlight current search term
"set incsearch "highlight search term while typing
set clipboard+=unnamed

source ~/.vim/anna.vim
